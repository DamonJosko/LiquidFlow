@model LiquidFlowLogin.Models.Address

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AddressID" />
            <div class="form-group">
                <label asp-for="HouseNumber" class="control-label"></label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetNameID" class="control-label"></label>
                <select asp-for="StreetNameID" class="form-control" asp-items="ViewBag.StreetNameID"></select>
                <span asp-validation-for="StreetNameID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityID" class="control-label"></label>
                <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                <span asp-validation-for="CityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountyStateID" class="control-label"></label>
                <select asp-for="CountyStateID" class="form-control" asp-items="ViewBag.CountyStateID"></select>
                <span asp-validation-for="CountyStateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZIPID" class="control-label"></label>
                <select asp-for="ZIPID" class="form-control" asp-items="ViewBag.ZIPID"></select>
                <span asp-validation-for="ZIPID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryID" class="control-label"></label>
                <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
